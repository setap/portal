<div class="container-fluid" xmlns="http://www.w3.org/1999/html">
    <div class="row-fluid">
        <div class="span3">

            <%- partial('partials/newTree') %>

            <% if(netcoolAlert){ %>
            <%- partial('partials/leftTreeTop2') %>
            <% } else { %>
            <%- partial('partials/errorPortlet') %>
            <% } %>

        </div>
        <div class="span7">

            <%- partial('partials/map') %>

            <h5 style="text-align: left"> События IBM SmartCloud ControlDesk </h5>

            <%- partial('partials/eventsFromSmartCloud') %>

        </div>
        <div class="span2">

            <% if(netcoolAlert){ %>
            <%- partial('partials/rightTreeTop') %>
